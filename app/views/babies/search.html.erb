<h2 class="text-center">Babies around your selected city</h2>


<div class="container map-container">
  <div class="row">
    <% @babies.each do |baby| %>
        <div class="card-container col-xs-12 col-sm-6 col-md-4 col-lg-4">
      <%= link_to baby_path(baby), class: 'decoration' do %>
          <div class="card-trip grow">
            <%= cl_image_tag baby.photo %>
            <div class="card-trip-infos">
                <div class="infos-card">
                  <h2><%= baby.name %></h2>
                    <% if baby.age > 1 %>
                      <p>Age: <%= baby.age %> year old</p>
                    <% else %>
                      <p>Age: <%= baby.age %> years old</p>
                    <% end %>
                  <p>City: <%= baby.city %></p>
                </div>
              <h2 class="card-trip-pricing"><%= baby.price %>$</h2>
            </div>
          </div>
      <% end %>
        </div>
    <% end %>
  </div>

<div
  id="map"
  style="width: 100%;
  height: 100vh; left-margin: 15px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

</div>

<div class="text-center">
<%= link_to "Retour", root_path(@baby), :class => "btn btn-primary marge-bouton btn-medium" %>
</div>
