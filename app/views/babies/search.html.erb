<h2 class="text-center">Votre recherche de bébés</h2>


<div class="container">
  <div class="row">
    <% @babies.each do |baby| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <%= link_to baby_path(baby), class: 'decoration' do %>
          <div class="card-trip">
            <%= cl_image_tag baby.photo %>
            <div class="card-trip-infos">
                <div class="infos-card">
                  <h2><%= baby.name %></h2>
                    <% if baby.age > 1 %>
                      <p>Age: <%= baby.age %> ans</p>
                    <% else %>
                      <p>Age: <%= baby.age %> an</p>
                    <% end %>
                  <p>City: <%= baby.city %></p>
                </div>
              <h2 class="card-trip-pricing"><%= baby.price %>$</h2>
            </div>
          </div>
      <% end %>
        </div>
    <% end %>
     <%= link_to "Retour", root_path(@baby), :class => "btn btn-primary" %>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
