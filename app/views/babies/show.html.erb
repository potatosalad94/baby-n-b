<div class="container container-baby-show">
  <div class="card-baby-info-box">
    <div class="baby-basic-info text-center" >
      <div class="baby-photo">
        <%= cl_image_tag @baby.photo, height: 150, width: 150, crop: :fill, radius: 80 %>
      </div>
      <div class="baby-info">
        <h2><%= @baby.name %></h2>
        <p>Age: <%= @baby.age %> | Price: <%= @baby.price %>$</p>
      </div>
    </div>
    <hr>
    <div class="baby-description text-center" id="btn-flex">
      <p><em><%= @baby.description %></em></p>
    </div>
    <div class="baby-btn text-center">
      <%= link_to "Book this baby", new_baby_booking_path(@baby), :class => "btn btn-success" %>
      <% if policy(@baby).edit? %>
              <%= link_to 'Modifier ton bébé', edit_baby_path(@baby), :class => "btn btn-warning"  %>
            <% end %>
    </div>
  </div>


</div>

  <div class="review text-center">
    <h2>What people think about <br><%= @baby.name %></h2>
  </div>


<!-- REVIEWS -->
<div class="container container-baby-show">
  <% @baby.reviews.each do |review|%>
    <div class="message">
      <%= cl_image_tag review.user.photo, height: 100, width: 100, crop: :fill, radius: 80 %>
      <div class="message-name">
        <%= review.user.first_name %>
        <p><%= review.created_at.strftime("%d-%m-%Y") %></p>
      </div>

      <div class="message-body">
        <p><strong>Title of the review</strong></p>
        <p><%= review.content %></p>
        <p class="rating"><%= review.rating %>/5</p>
      </div>
    </div>
  <% end %>
</div>


<!-- BOUTTONS -->
<div class="container" id="btn-flex">
  <%= link_to "Add a review", new_baby_review_path(@baby), :class => "btn btn-primary" %>
</div>


