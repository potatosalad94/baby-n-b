<div class="container">
  <div class="row">
    <h2 class="text-center">Add a new review</h2>

    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for [@baby, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Add a review", class: "btn btn-primary" %>
      <% end %>
      <br>
      <%= link_to 'Back', baby_path(@baby) %>
    </div>
  </div>

  <div class="row">
    <h2 class="text-center"><%= @baby.name %> reviews</h2>
  </div>

  <p><% @baby.reviews do |review| %>
    <%= review.content %>
    <%= review.rating %>
  <% end %></p>


</div>

