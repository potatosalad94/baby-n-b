<div class="page2">

  <h2 class="text-center">My bookings</h2>
  <div class="container">
    <div class="row">
      <% @bookings.each do |booking| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
          <%= link_to baby_path(booking.baby_id), class: "decoration" do %>
            <div class="card-trip">
              <%= cl_image_tag booking.baby.photo %>
              <div class="card-trip-infos">
                <div class="infos-card">
                  <h2><%= booking.baby.name %></h2>
                  <p>Booked</p>
                  <p>From:<%= booking.start_date %></p>
                  <p>To:<%= booking.end_date %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= link_to "Book another baby", root_path, class: 'btn btn-success' %>
    </div>
  </div>

</div>
