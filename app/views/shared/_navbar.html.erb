        </div>
        <div class="dropdown">
          <!-- mettre une condition ici pour afficher l'avatar de l'utilisateur une fois connecte -->
          <% if user_signed_in? %>
            <% if current_user.photo.blank? %>
              <div class="avatar dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= image_tag "account.png", alt: "alttext", class: "avatar-default" %>
              </div>
            <% else %>
              <div class="avatar dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= cl_image_tag @current_user.photo, height: 55, width: 55, :crop => "thumb", gravity: :face, :radius => "max" %>
              </div>
            <% end %>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to "Manage account", edit_user_registration_path, class: 'dropdown-item' %>
              <%= link_to "My bookings", bookings_path, class: 'dropdown-item' %>
              <%= link_to "Log out", destroy_user_session_path, :method => :delete %>
            </div>
          <% end %>
