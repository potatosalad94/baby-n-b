        <div class="badge-container">
          <% if user_signed_in? %>
            <%= link_to new_baby_path do %>
              <%= image_tag "baby.png", alt: "alttext", class: "bebe" %>
            <% end %>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-primary' %>
